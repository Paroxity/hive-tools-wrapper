{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"lib": [
			"es2017",
			"dom"
		],
		"module": "commonjs",
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"resolveJsonModule": true
	},
	"include": [
		"src",
		"test"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
